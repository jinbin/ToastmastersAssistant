<view>
    <view class="window3" style="padding:10rpx;">
      <view class="box3" bindtap="getCh" id="tm" style="background:{{color1}}">
          <image style="width:60rpx;height:60rpx" src="../../images/blocks.png"></image>
          <view class="downText">头马</view>
      </view>
      <view class="box3" bindtap="getCh" id="ted" style="background:{{color2}}">
          <image style="width:60rpx;height:60rpx" src="../../images/blocks1.png"></image>
          <view class="downText">TED</view>
      </view>
      <view class="box3" bindtap="getCh" id="others" style="background:{{color3}}">
          <image style="width:60rpx;height:60rpx" src="../../images/blocks2.png"></image>
          <view class="downText" style="color:#1E90FF">视频</view>
      </view>
    </view>
</view>

<view wx:if="{{channel == 'ted'}}" class="container1">

  <view class="title">
    <text style="color:DimGray">—</text> TED演讲
    <text style="color:DimGray">—</text>
  </view>

  <view class="main_box" style="width:90%">
    <view style="padding: 10rpx">

      <view wx:for="{{audioTEDsrc}}" wx:for-index="index" wx:for-item="item">
        <view bindtap="playAudio" data-year="{{index}}" class="box" style="color:DarkCyan;font-size:15px;justify-content: flex-start">
          <view class="label" wx:if="{{isplay && audioYear == index}}">
            <image style="width:40rpx;height:40rpx;display: flex;flex-direction: row" src="../../images/audio_stop.png">
            </image>
            <text style="color:#2E8B57">【TED精选】</text>
          </view>
          <view class="label" wx:else>
            <image style="width:50rpx;height:40rpx;display: flex;flex-direction: row" src="../../images/audio_orange.png">
            </image>
            <text style="color:#2E8B57">【TED精选】</text>
          </view>

          <view style="color:DimGray;width:91%;display: flex;flex-direction: row;justify-content:flex-start;">
            {{item.title}}
          </view>
        </view>
      </view>

    </view>
  </view>

</view>

<view wx:if="{{channel == 'tm'}}" class="container1">

  <view class="title">
    <text style="color:DimGray">—</text> 冠军演讲
    <text style="color:DimGray">—</text>
  </view>

  <view class="main_box" style="width:90%">
    <view style="padding: 10rpx">

      <view wx:for="{{audiosrc}}" wx:for-index="index" wx:for-item="item">
        <view bindtap="playAudio" data-year="{{index}}" class="box" style="color:DarkCyan;font-size:15px;justify-content: flex-start">
          <view class="label" wx:if="{{isplay && audioYear == index}}">
            <image style="width:40rpx;height:40rpx;display: flex;flex-direction: row" src="../../images/audio_stop.png">
            </image>
            <text style="color:#2E8B57">【冠军精选】</text>
          </view>
          <view class="label" wx:else>
            <image style="width:50rpx;height:40rpx;display: flex;flex-direction: row" src="../../images/audio_orange.png">
            </image>
            <text style="color:#2E8B57">【冠军精选】</text>
          </view>

          <view style="color:DimGray;width:91%;display: flex;flex-direction: row;justify-content:flex-start;">
            {{"【" + item.year + "冠军演讲" + "】" + item.title}}
          </view>
        </view>
      </view>

    </view>
  </view>

</view>

<view wx:if="{{channel == 'others'}}" class="container1">

  <view class="title">
    <text style="color:DimGray">—</text> 敬请期待
    <text style="color:DimGray">—</text>
  </view>

  <view class="main_box" style="width:90%">
    <view style="padding: 10rpx">

      <view wx:for="{{}}" wx:for-index="index" wx:for-item="item">
        <view bindtap="playAudio" data-year="{{index}}" class="box" style="color:DarkCyan;font-size:15px;justify-content: flex-start">
          <view class="label" wx:if="{{isplay && audioYear == index}}">
            <image style="width:40rpx;height:40rpx;display: flex;flex-direction: row" src="../../images/audio_stop.png">
            </image>
            <text style="color:#2E8B57">【精选】</text>
          </view>
          <view class="label" wx:else>
            <image style="width:50rpx;height:40rpx;display: flex;flex-direction: row" src="../../images/audio_orange.png">
            </image>
            <text style="color:#2E8B57">【精选】</text>
          </view>

          <view style="color:DimGray;width:91%;display: flex;flex-direction: row;justify-content:flex-start;">
            {{item.title}}
          </view>
        </view>
      </view>

    </view>
  </view>

</view>

