/* pages/merger/merger.wxss */

button::after {
  border: none;
}

button {
  border: 0;
  background-color: transparent;
  outline: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

.container1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner {
  width: 100%;
}

.swiper {
  height: 30%;
}

.title {
  /* font-family: -apple-system, BlinkMacSystemFont, 'Microsoft YaHei', sans-serif; *//* font-size: 40rpx; */
  font-size: 20px;
  /* padding: 10rpx; */
  padding-top: 20rpx;
  /* color: black; */
  color: #333;
  line-height: 1.75;
}

.main_box {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10rpx;
  font-size: 16px;
  line-height: 1.75;
}

img {
    margin-left: auto; 
    margin-right:auto; 
    display:block;
}

.item {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.line {
  margin: 0 auto;
  /* width: 150rpx; */
  height: 8rpx;
  background-color: #d8d8d8;
}

.text_block {
  display: inline;
  padding: 20rpx;
  text-align: left;
}

.textLink {
  display: inline;
  padding: 40rpx;
  color: DarkCyan;
  text-align: left;
}

.page__ft {
  padding: 50rpx 0;
  padding-bottom: 20px;
  text-align: center;
  font-size: 14px;
  color: #888;
}

.ad {
  width: 90%;
  height: 90%
}
