<!--pages/video/vcollection/vcollection.wxml-->
<view class="container1">
  <scroll-view scroll-x="true">
    <block wx:for="{{types}}" wx:key="id">
      <div class="tab-item" style="" bindtap="changetype" id="{{item.id}}">
        <view class="item">
          <view style="">{{item.text}}</view>
        </view>
      </div>
    </block>
  </scroll-view>
  <block wx:for="{{videos}}" wx:key="id" wx:for-index="idx">
    <view>
      <txv-video vid="{{item.vid}}" playerid="txv1">
        <view class='txv-video-slot'>video slot</view>
      </txv-video>
      <view class="title" style="height: 100rpx; padding: 20rpx; font-weight:250;">
        <view bindtap="ToVideoPage" data-vid="{{item.vid}}" data-title="{{item.title}}" style="width: 90%">
          <text>{{item.title}}</text>
        </view>
        <view>
          <button style="background-color: #57bd6a;" open-type="share" data-vid="{{item.vid}}" data-title="{{item.title}}">
            <mp-icon icon="share" color="white" size="{{25}}">
            </mp-icon>
          </button>
        </view>
      </view>
    </view>
    <ad wx:if="{{idx != 0 && idx % 3 == 0}}" unit-id="adunit-bdf768fb9e1c9fe1" ad-type="video" ad-theme="white"></ad>
    <view class='line'></view>
  </block>
</view>