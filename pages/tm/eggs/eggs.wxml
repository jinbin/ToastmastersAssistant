          <image wx:if="{{value}}" style="width:60rpx;height:60rpx" src="../../../images/jidan2.png"></image>
          <view class="downText" wx:if="{{value}}" style="color:#90EE90">彩蛋</view>
        </view>
      </block>
    </view>
</view>
