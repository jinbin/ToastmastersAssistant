  </view>
  <view>
    <text style="color:white;font-size:12px;padding-bottom:10rpx;">打开彩蛋，后果自负，概不负责</text>
  </view>
    <view class="window1">
      <block wx:for="{{eggs}}" wx:key="id" wx:for-index="key"  wx:for-item="value">
