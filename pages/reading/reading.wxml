<!--pages/reading/reading.wxml-->

<view class="container1">
  <image bindtap="saveOfficialQRCode" style="width:100%;" mode="widthFix" src="/images/文章精选-min.jpeg" mode="widthFix"></image>
</view>

<view class="cards" id="cards">

  <view wx:for="{{guessYouLike}}" wx:for-index="index" style="width:100%;">
    <view class="line" style="background-color: #F8F8F8"></view>

    <view class="card">
      <view wx:if="{{index % 6 == 0}}">
        <image src="/images/配图-min.jpeg" style="width:100px;height:100px"></image>
      </view>
      <view wx:elif="{{index % 6 == 1}}">
        <image src="/images/配图1-min.jpg" style="width:100px;height:100px"></image>
      </view>
      <view wx:elif="{{index % 6 == 2}}">
        <image src="/images/配图2-min.jpg" style="width:100px;height:100px"></image>
      </view>
      <view wx:elif="{{index % 6 == 3}}">
        <image src="/images/配图3-min.jpg" style="width:100px;height:100px"></image>
      </view>
      <view wx:elif="{{index % 6 == 4}}">
        <image src="/images/配图4-min.jpeg" style="width:100px;height:100px"></image>
      </view>
      <view wx:else> 
        <image src="/images/更多.png" style="width:100px;height:100px"></image> 
      </view>
      <view class="card_text">
        <navigator url="/pages/testdb/testdb?src={{item.src}}">
          {{item.title}}
        </navigator>
      </view>
    </view>

    <view wx:if="{{index % 6 == 3}}" class="adBlock">
      <view class="adContainer">
        <!-- Banner广告 -->
        <!-- <ad unit-id="adunit-ab171e6bb49115c5" ad-intervals="30"></ad> -->
        <!-- 格子广告 -->
        <ad unit-id="adunit-a9a18369f7e6d2c6" ad-type="grid" grid-opacity="0.8" grid-count="5" ad-theme="white"></ad>
      </view>
    </view>
  </view>

  <view class="line" style="background-color: #F8F8F8"></view>

</view>

