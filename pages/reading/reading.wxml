<view class="reading_type">
  <block wx:for="{{types}}">
    <view wx:if="{{currentId == item.id}}" bindtap="changetype" id="{{item.id}}"class="item_type" style="width: 20%; background-color:#FFDEAD">
      <image style="width:70rpx;height:70rpx;padding-bottom:10px;" src="/images/{{item.icon}}"></image> 
      <view style="font-size: 13px;">{{item.text}}</view>
    </view>
    <view wx:else bindtap="changetype" id="{{item.id}}"class="item_type" style="width: 20%;">
      <image style="width:70rpx;height:70rpx;padding-bottom:10px;" src="/images/{{item.icon}}"></image> 
      <view style="font-size: 13px;">{{item.text}}</view>
    </view>
  </block>
</view>

<view class="cards" id="cards">

  <view wx:for="{{guessYouLike}}" wx:for-index="index" style="width:100%;">
    <view class="line" style="background-color: #F8F8F8"></view>

    <view class="card">
      <view wx:if="{{index % 7 == 0}}" class="item_type">
        <image src="/images/幸福涂鸦.png" style="width:50px;height:50px"></image>
      </view>
      <view wx:elif="{{index % 7 == 1}}" class="item_type">
        <image src="/images/配图-min.jpeg" style="width:50px;height:50px"></image>
      </view>
      <view wx:elif="{{index % 7 == 2}}" class="item_type">
        <image src="/images/配图1-min.jpg" style="width:50px;height:50px"></image>
      </view>
      <view wx:elif="{{index % 7 == 3}}" class="item_type">
        <image src="/images/配图2-min.jpg" style="width:50px;height:50px"></image>
      </view>
      <view wx:elif="{{index % 7 == 4}}" class="item_type">
        <image src="/images/配图3-min.jpg" style="width:50px;height:50px"></image>
      </view>
      <view wx:elif="{{index % 7 == 5}}" class="item_type">
        <image src="/images/配图4-min.jpeg" style="width:50px;height:50px"></image>
      </view>
      <view wx:else class="item_type"> 
        <image src="/images/更多.png" style="width:50px;height:50px"></image> 
      </view>
      <view class="card_text">
        <navigator url="/pages/testdb/testdb?src={{item.src}}">
          {{item.title}}
        </navigator>
      </view>
    </view>

    <view wx:if="{{index % 7 == 4}}" class="adBlock">
      <view class="adContainer">
        <!-- Banner广告 -->
        <!-- <ad unit-id="adunit-ab171e6bb49115c5" ad-intervals="30"></ad> -->
        <!-- 格子广告 -->
        <ad unit-id="adunit-a9a18369f7e6d2c6" ad-type="grid" grid-opacity="0.8" grid-count="5" ad-theme="white"></ad>
      </view>
    </view>
  </view>

  <view class="line" style="background-color: #F8F8F8"></view>

</view>

