/* pages/toutiao/toutiao.wxss */

.container1 {
  display: flex;
  flex-direction: column;
  align-items: center; 
}

.window1 {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0rpx;
  margin-top: 20rpx;
}

.box1 {
  width: 49%;
  height: 250rpx;
  /* background-color: goldenrod; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  border-radius:25rpx;
}

.downText {
  font-size:16px;
  color:#4F4F4F;
}

.circle-float{
  color: #ffffff;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 20rpx;
  right: 20rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  font-size: 28rpx;
  background: rgb(56, 243, 56);
  z-index:100;
}

.hidden { 
  display: none;
}

.show {
  display: block;
}