<!--list.wxml-->
<view class="page">
    <view class="page__hd" style="display: flex;flex-wrap: nowrap; justify-content: space-between">
      <view wx:if="{{index != 5 && index != 6 && index != 9}}">
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="page__title">{{list[index][1]}}</view>
          <view class="page__desc">{{list[index][0]}}</view>
        </picker>
      </view>
      <view wx:if="{{index == 5}}">
        <view class="page__desc">CC路径介绍：Toastmasters International是沟通和领导力方面领先的国际教育组织。头马自1924年成立以来帮助过无数成员提高他们的沟通和领导技能。作为一个教育组织，教育体系是头马的核心。CC(Competent Communicator)是头马2018年之前的沟通路径，共包含10个项目，分别培养你在公共演讲上不同方向的能力。以下是这10个项目的中英文说明。</view>
      </view>
      <view wx:if="{{index == 9}}">
        <view class="page__desc">Pathways介绍：Toastmasters International是沟通和领导力方面领先的国际教育组织。头马自1924年成立以来帮助过无数成员提高他们的沟通和领导技能。作为一个教育组织，教育体系是头马的核心。Pathways是头马2018年最新上线的教育体系，共分为11条路径，分别培养你不同方向的能力。每个路径包含5个阶段，每个阶段包含若干必修和选修项目。以下是这11条路径的中英文说明。</view>
      </view>
    </view>

  <view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
      <view class="page__bd page__bd_spacing">
        <view class="kind-list">
            <block wx:for="{{projects}}" wx:key="id">
                <!-- <view wx:if="{{item.lang == 'cn'}}" class="kind-list__item" bindtouchstart="touchstart" bindtouchmove='touchmove' bindtouchend='touchend'> -->
                <view wx:if="{{item.lang == 'cn' && (pathStyle == false || pathStyle && item.highlight)}}" class="kind-list__item">
                    <view  id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open != 'false' ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                        <view wx:if="{{item.highlight}}" class="titleItem" style="color:blue">
                        {{item.name}}
                        <p bindtap='copyText' data-text="{{item.desc}}" style="color:opacity:.4">{{item.open != 'false' ? '(点击复制)': ''}}</p>
                        </view>
                        <view wx:if="{{!item.highlight && !pathStyle}}" class="titleItem">
                        {{item.name}}
                        <p bindtap='copyText' data-text="{{item.desc}}" style="color:opacity:.4">{{item.open != 'false' ? '(点击复制)': ''}}</p>
                        </view>
                    </view>
                    <view class="kind-list__item-bd {{item.open != 'false' ? 'kind-list__item-bd_show' : ''}}">
                        <view class="weui-cells {{item.open != 'false' ? 'weui-cells_show' : ''}}" style="padding: 20rpx;">
<text space="ensp" selectable='true'>{{item.desc}}\n\n</text>
                        <!-- <navigator style="right: 20px; color:#00BFFF" url="/pages/canvas/canvas?texts={{item.desc}}">【图片转发】</navigator> -->
                        <navigator wx:if="{{item.resource}}" style="right: 20px; color:#00BFFF" url="/pages/pathways/document/document?url={{'https://746d-tmassistant-5275ad-1258071577.tcb.qcloud.la/tmcResources/Evaluation%20Resource/cn/CS' + item.resource + '.pdf'}}">【评估资料】</navigator>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>
                </view>

                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
      <view class="page__bd page__bd_spacing">
        <view class="kind-list">
            <block wx:for="{{projects}}" wx:key="id">
                <!-- <view wx:if="{{item.lang == 'en'}}" class="kind-list__item" bindtouchstart="touchstart" bindtouchmove='touchmove' bindtouchend='touchend'> -->
                <view wx:if="{{item.lang == 'en'&& (pathStyle == false || pathStyle && item.highlight)}}" class="kind-list__item">
                    <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open != 'false' ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                        <view wx:if="{{item.highlight}}" class="titleItem" style="color:blue">
                        {{item.name}}
                        <p bindtap='copyText' data-text="{{item.desc}}" style="color:opacity:.4">{{item.open != 'false' ? '(点击复制)': ''}}</p>
                        </view>
                        <view wx:else class="titleItem">
                        {{item.name}}
                        <p bindtap='copyText' data-text="{{item.desc}}" style="color:opacity:.4">{{item.open != 'false' ? '(点击复制)': ''}}</p>
                        </view>
                    </view>
                    <view class="kind-list__item-bd {{item.open != 'false' ? 'kind-list__item-bd_show' : ''}}">
                        <view class="weui-cells {{item.open != 'false' ? 'weui-cells_show' : ''}}" style="padding: 20rpx;">
<text space="ensp" selectable='true'>{{item.desc}}\n\n</text>
                        <navigator wx:if="{{item.resource}}" style="right: 20px; color:#00BFFF" url="/pages/pathways/document/document?url={{'https://746d-tmassistant-5275ad-1258071577.tcb.qcloud.la/tmcResources/Evaluation%20Resource/en/' + item.resource + '.pdf'}}">【Evaluation Resource】</navigator>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>
                </view>
            </view>
        </view>
    </view>
</view>

  

</view>
