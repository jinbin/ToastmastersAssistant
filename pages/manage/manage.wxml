<form bindsubmit="postMessage" bindreset="formReset" report-submit="true"> 

      <div class="weui-cells weui-cells_form">
        <div class="weui-cell">
          <div class="weui-cell__bd">
              <p class="weui-uploader__title">活动名称
              <span style="color:red;">*</span>
              </p>

    <view class='form-group'>  
        <input type="text" bindinput="bindActivityName" class="input-text" name="activityName" placeholder="请输入活动名称" />  
    </view>
          </div>
        </div> 
      </div> 

      <div class="weui-cells weui-cells_form">
        <div class="weui-cell">
          <div class="weui-cell__bd">
              <p class="weui-uploader__title">活动地点
              <span style="color:red;">*</span>
              </p>

    <view class='form-group'>  
        <input type="text" bindinput="bindActivityLocation" class="input-text" name="activityLocation" placeholder="请输入活动地点" />  
    </view>
          </div>
        </div> 
      </div> 

<div class="weui-cells weui-cells_form">

        <div class="weui-cell">
          <div class="weui-cell__bd">
              <p class="weui-uploader__title">活动说明
              <span style="color:red;">*</span>
              </p>
              

        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" bindinput="bindDesInput" name="activityDesc" placeholder="请输入活动说明" style="height: 3.3em" />
                </view>
            </view>
        </view>
          </div>
        </div> 
</div>

